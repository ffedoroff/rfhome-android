<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="button1col">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">50</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bulb_off</item>
        <item name="android:gravity">bottom|center</item>
    </style>

    <style name="layout50horizontal" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">50</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="layout50vertical" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">100</item>
    </style>

</resources>
