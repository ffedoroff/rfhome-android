<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="button1col">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">onTriggerClicked</item>
        <item name="android:textSize">35sp</item>
        <item name="android:drawableLeft">@drawable/bulb_off</item>
    </style>

    <style name="linearForButtons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:maxHeight">@dimen/button_height</item>
    </style>

</resources>
